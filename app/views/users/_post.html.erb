<li class="user-post">
  <a href="<%= channel_path(post.channel, :anchor => "post_#{post.id}") %>">
    <div class="excerpt"><%= post.body[0..200] %><%= "&hellip;".html_safe if post.body.size > 200 %></div>
    <div class="date"><%= time_ago_in_words(post.created_at) %> ago</div>
    <span class="channel-title"><%= post.channel.title %></span>
  </a>
</li>
