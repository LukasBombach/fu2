<% title ||= false %>
<%= form_for *form do |f| %>
  <% if title %>
    <div class="title">
      <%= f.text_field :title, class: "channel-title", placeholder: "Channel title" %>
    </div>
  <% end %>
  <% markdown = (@post && !@post.new_record? ? @post.markdown? : current_user.markdown?) %>
  <%= hidden_field_tag "syntax", markdown ? "md" : "html", :id => "syntax" %>
  <div class="comment-box-container">
    <%= f.text_area :body, :class => 'comment-box' %>
  </div>
  <% if markdown %>
    <div class="markdown-help-show"><%= render :partial => "shared/markdown_help" %></div>
  <% end %>
  <div class="actions">
    <% if markdown %>
      <button class="response-button markdown-help"><%= octicon "markdown" %></button>
    <% end %>
    <%= f.submit "Send", class: "response-button", accesskey: "s" %>
  </div>
<% end %>

<div class="actions left">
  <form encType='multipart/form-data'>
    <div class="upload-image" data-uploader-url="<%= images_path(format: :json) %>"></div>
  </form>
</div>
