%h2 All Channels
%ul.select_letters
  %li= link_to "#", all_channels_path(:letter => "#")
  -('a'..'z').each do |c|
    %li= link_to c.upcase, all_channels_path(:letter => c)
%ul#recent_activities
  -@view.channels.each do |channel|
    %li.visited
      %p
        .date
          =link_to channel.updated_at.strftime('%Y/%m/%d %H:%M:%S'), channel_path(channel, :anchor => "comments")
        =link_to h(channel.title), channel_path(channel)
=will_paginate @view.channels
