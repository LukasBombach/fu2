%h2 Read message
=render :partial => "navigation"
-if current_user.id == @message.user_id || current_user.id == @message.sender_id
  .messages_show_subject
    Subject:
    =h(@message.subject)
  .messages_show_body
    =format_message_body(@message.body)
  %h2 Reply
  -form_for :message, @message, :url => { :action => "create" } do |f|
    %input{:type => 'hidden', :name => 'message[receiver_name]', :value => User.find(:first, :conditions => "id = #{@message.sender_id}").display_name}
    %p
      %label{:for => "subject"} Subject:
      =f.text_field :subject
    %p
      %label{:for => "body"} Message:
      %br
      =f.text_area :body
    %p.right
      =f.submit 'Send Message', :accesskey => "s"
-else
  .error Don't you try an hack the system! This message is not for you!